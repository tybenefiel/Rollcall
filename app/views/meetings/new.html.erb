<h1>New Meeting</h1>

<%= form_tag(meetings_url, method: 'post') do %>
  <div>
    <%= label_tag :held_on %><br />
    <%= text_field_tag :held_on %>
  </div>

  <div>
    <%= label_tag :course_id %><br />
    <select name="select">
      <% @courses.each do |course| %>
      <option value="course.title"><%=course.department%> <%=course.title %> <%=course.number%> </option>
      <% end %>
  </select>
  </div>

  <div>
    <%= submit_tag "Create Meeting" %>
  </div>
<% end %>
